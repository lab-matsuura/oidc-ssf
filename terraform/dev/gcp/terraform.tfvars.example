# =============================================================================
# Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and update values for your environment.
# Do not commit terraform.tfvars to version control.
# =============================================================================

# GCP Project Configuration (required)
project_id  = "your-gcp-project-id"
region      = "asia-northeast1"
environment = "dev"

# GitHub Repository (required)
# Used for Workload Identity Federation with GitHub Actions
github_repository = "your-org/oidc-ssf"

# Bastion IAP Access (optional)
# Add Google account emails that should have access to the bastion via IAP.
# Format: "user:your-email@gmail.com" or "user:your-email@example.com"
bastion_iap_users = [
  # "user:your-email@gmail.com",
]

# =============================================================================
# Note: The following variables have sensible defaults and typically don't
# need to be changed:
#   - db_name_idp = "idp"
#   - db_name_rp = "rp"
#   - db_name_rp2 = "rp2"
#   - db_user = "ssf-app"
#   - image_tag = "latest"
#
# OIDC URLs are automatically generated from the project number.
# =============================================================================
