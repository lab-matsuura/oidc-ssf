# PostgreSQL Database Configuration (IdP)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=idp
DB_SSLMODE=disable

# PostgreSQL Database Configuration (RP - Push)
RP_DB_HOST=localhost
RP_DB_PORT=5432
RP_DB_USER=postgres
RP_DB_PASSWORD=postgres
RP_DB_NAME=rp
RP_DB_SSLMODE=disable

# PostgreSQL Database Configuration (RP2 - Poll)
RP2_DB_HOST=localhost
RP2_DB_PORT=5432
RP2_DB_USER=postgres
RP2_DB_PASSWORD=postgres
RP2_DB_NAME=rp2
RP2_DB_SSLMODE=disable

# Server Configuration
SERVER_PORT=8080
CLIENT_PORT=8081

# OIDC Configuration (RP - Push)
OIDC_ISSUER_URL=http://localhost:8080
OIDC_CLIENT_ID=test-client
OIDC_CLIENT_SECRET=test-secret
OIDC_REDIRECT_URI=http://localhost:8081/callback

# OIDC Configuration (RP2 - Poll)
RP2_OIDC_CLIENT_ID=test-client-2
RP2_OIDC_CLIENT_SECRET=test-secret-2
RP2_OIDC_REDIRECT_URI=http://localhost:8082/callback

# SSF Poll Configuration (RP2)
RP2_SSF_POLL_INTERVAL=10

# SSF Configuration
SSF_CLIENT_URL=http://localhost:8081

# Token Lifespans
ACCESS_TOKEN_LIFETIME=3600        # 1 hour in seconds
REFRESH_TOKEN_LIFETIME=2592000    # 30 days in seconds
AUTHORIZE_CODE_LIFETIME=600       # 10 minutes in seconds
